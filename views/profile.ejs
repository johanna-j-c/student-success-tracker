<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a Student to Caseload</h2>
            <form action="/student/createStudent" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="studentName" class="form-label">Student Name</label>
                  <input type="text" class="form-control" id="studentName" name="studentName">
              </div>
              <div class="mb-3">
                <label for="disability" class="form-label">Disability</label>
                <textarea class="form-control" id="disability" name="disability"></textarea>
              </div>
              <div class="mb-3">
                <label for="strengths" class="form-label">Strengths</label>
                <textarea class="form-control" id="strengths" name="strengths"></textarea>
              </div>
              <div class="mb-3">
                <label for="areasOfGrowth" class="form-label">Areas of Growth</label>
                <textarea class="form-control" id="areasOfGrowth" name="areasOfGrowth"></textarea>
              </div>
              <div class="mb-3">
                <label for="accommodations" class="form-label">Accommodations</label>
                  <ul>
                    <input id="calculator" type="checkbox" value="Calculator" name="accommodations">
                    <label for="calculator">Calculator</label>
                    <input id="referenceSheet" type="checkbox" value="Reference Sheet" name="accommodations">
                    <label for="referenceSheet">Reference Sheet</label>
                    <input id="graphicOrganizer" type="checkbox" value="Graphic Organizer" name="accommodations">
                    <label for="graphicOrganizer">Graphic Organizer</label>
                  </ul>
                <!-- <textarea class="form-control" id="accommodations" name="accommodations"></textarea> -->
              </div>
              <!-- <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div> -->
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<students.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/student/<%= students[i]._id%>">
              <span class="text"><%= students[i].studentName %></span>  
              <!-- <img class="text" src="<%= students[i].studentName%>"> -->
            </a>
          </li>
        <% } %>
        </ul>
      </div>
        <h2>Add an IEP Goal</h2>
        <form action="/goal/createGoal" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
              <label for="goalArea" class="form-label">Goal Area</label>
                <select id="goalArea" name="goalArea">
                  <option value="math">Math Skills</option>
                  <option value="readingAndWriting">Reading and Writing Skills</option>
                  <option value="executiveFunctioning">Executive Functioning Skills</option>
                  <option value="self-Regulation">Self-Regulation Skills</option>
                </select>
          </div>
          <div class="mb-3">
            <label for="goal" class="form-label">Goal</label>
            <textarea class="form-control" id="goal" name="goal"></textarea>
          </div>
          <div class="mb-3">
            <label for="objective1" class="form-label">Objective 1</label>
            <textarea class="form-control" id="objective1" name="objective1"></textarea>
          </div>
          <div class="mb-3">
            <label for="objective2" class="form-label">Objective 2</label>
            <textarea class="form-control" id="objective2" name="objective2"></textarea>
          </div>
          <div class="mb-3">
            <label for="objective3" class="form-label">Objective 3</label>
            <textarea class="form-control" id="objective3" name="objective3"></textarea>
          </div>
          <div class="mb-3">
            <label for="objective4" class="form-label">Objective 4</label>
            <textarea class="form-control" id="objective4" name="objective4"></textarea>
          </div>
          <div class="mb-3">
            <label for="studentsAssigned" class="form-label">Students Assigned</label>
            <ul class="row list-unstyled">
              <% for(var i=0; i<students.length; i++) {%>
                <li class="col-6 justify-content-between mt-5">
                  <input id="<%= students.studentName[i] %>" type="checkbox" value="<%= students.studentName[i] %>" name="accommodations">
                    <label for="<%= students.studentName[i] %>"> <%= students.studentName[i] %></label>
                </li>
              <% } %>
              </ul> 
            <textarea class="form-control" id="accommodations" name="accommodations"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>